// Accordion styles
div.accordion
  background-color #eee
  color #444
  cursor pointer
  padding 1px
  width 100%
  transition 0.4s

  &.active, &:hover
    background-color #ccc

div.panel
  padding 0 5px
  max-height 0
  overflow hidden
  transition max-height 0.2s ease-out
  
  button
    margin 2px

// Overlay styles
.dialog-overlay
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.5)
  z-index 999999
  display none
  
.dialog-overlay .dialog
  width 80%
  margin 10px auto 
  background-color #fff
  border-radius 3px

  .dialog-msg
    padding 12px 10px

    p
      margin 0
      font-size 15px

  footer
    padding 8px 10px

    .controls
      text-align center

  .button
    text-shadow none
    padding 5px 15px
    border-radius 3px

.button-info
  background #337ab7
  border 1px solid #2e6da4
  color #f5f5f5

.button-danger
  background #f44336
  border 1px solid #d32f2f
  color #f5f5f5
