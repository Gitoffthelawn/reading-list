.reading-item
  border-radius: 3px
  padding: 0
  margin: 10px 0 0 0
  position: relative
  overflow: hidden
  transition: all 0.5s ease 0s

  .favicon
    position: absolute
    top: 10px
    left: 10px
    width: 36px
    height: 36px
    border-radius: 4px
    border: 1px solid #ccc
    padding: 1px

  .favicon-img
    width: 100%
    height: 100%
    border-radius: 2px
    &.error
      display: none

  .item-link
    text-decoration: none
    display: block
    width: 100%
    padding: 10px 50px 10px 56px
    min-height: 56px
    .title
      display: block
      font-weight: bold
    .host
      display: block

  .delete-button
    position: absolute
    text-align: center
    font-weight: bold
    top: 5px
    right: 5px
    border-radius: 100%
    padding: 0
    width: 20px
    height: 20px
    border: 0
    background: transparent
    color: #ccc
    transform: rotateZ(0) scale(1)
    transition: transform 0.3s ease,
      box-shadow 0.5s ease
    &:hover
      cursor: pointer
      background: #ccc
      color: #fff
      transform: rotateZ(90deg) scale(2)
      box-shadow: 1px 0 1px rgba(0, 0, 0, 0.15)
